@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@* DISEÑO DEGRADE DE FONDO *@
<style>
    body{
        background: #ffe259;
        background: linear-gradient(to right, #ffa751, #ffe259);
    }
        .bg{
        background-image: url('https://browsecat.art/sites/default/files/yellow-black-wallpapers-48447-682434-2200006.png');
        background-position: center center;
    }
</style>

<div class="container w-75 bg-dark mt-5 rounded shadow"> 

    <div class="row align-items-stretch">
        <div class="col bg d-none d-lg-block col-md-5 col-lg-5 col-xl-6 rounded">

        </div>
        <div class="col p-5 rounded-end">
            <div class="text-end">
                @* <img src="~/Imagenes/logo.png" width="48" alt=""> *@
                <i class="bi bi-power"></i>
                <h2 class="fw-bold text-center py-5 text-white">Bienvenido</h2>

@* LOGIN *@
                <form id="account" method="post">
                    <div class="mb-4 text-start text-white">
                    <label asp-for="Input.Email" class="form-label">Correo Electrónico</label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="mb-4 text-start text-white">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="mb-4 form-check text-start text-white">
                        <input type="checkbox" name="connected" class="form-check-input" asp-for="Input.RememberMe">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                    <div class="d-grid">
                         <button id="login-submit" type="submit" class="btn btn-warning">Iniciar Sesion</button> 
                    </div>

                    <div class="my-3 text-start text-white">
                        @* <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrarse como un nuevo usuario</a> *@
                        <span>No tienes cuenta? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="text-warning">Regístrate</a></span><br>
                        <span><a id="forgot-password" asp-page="./ForgotPassword" class="text-warning">Recuperar Contraseña</a></span>
                        @* <a id="forgot-password" asp-page="./ForgotPassword">Olvidaste tu contraseña?</a> *@
                    </div>
                </form>

@* LOGIN CON REDES SOCIALES *@
                            <div class="container w-100 my-5 text-white">
                                <div class="row text-center">
                                    
                                    <div class="col-12">Iniciar Sesion</div>
                                    <div class="row">
                                        @* BOTON FACEBOOK *@

                                        <div class="col">
                                            <button class="btn btn-outline-primary w-100 my-1">
                                            <div class="row align-items-center">
                                                <div class="col-2 d-none d-md-block">
                                                    <i class="bi bi-facebook"></i>
                                                </div>
                                                <div class="col-12 col-md-10 text-center">
                                                    Facebook
                                                </div>
                                            </div>
                                            </button>
                                        </div>

                                        @* BOTON GOOGLE *@

                                        <div class="col">
                                            <button class="btn btn-outline-danger w-100 my-1">
                                            <div class="row align-items-center">
                                                <div class="col-2 d-none d-md-block">
                                                    <i class="bi bi-google"></i>
                                                </div>
                                                <div class="col-12 col-md-10 text-center">
                                                    Google
                                                </div>
                                            </div>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>




            </div>
        </div>
    </div>
</div>
 



